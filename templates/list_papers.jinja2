<html>
  <head>
    <script type="text/javascript" language="javascript" src="/static/jquery.js"></script>
		<script type="text/javascript" language="javascript" src="/static/jquery.dataTables.js"></script>

		<style type="text/css">
			@import "/static/list_papers.css";
		</style>

		<script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$('#paper_list_table').dataTable({
      "sDom": '<"top"flp>rt<"bottom"i><"clear">',
      "sPaginationType": "full_numbers" });
			} );
		</script>

    <title>[paper-pile] list papers</title>
  </head>
  <body>

    <table id="paper_list_table">
      <thead>
        <tr>
          <th>Paper Name</th>
          <th>Title</th>
          <th>Authors</th>
          <th>Venue</th>
          <th>Year</th>
          <th>Date Read</th>
        </tr>
      </thead>
      <tbody>
        {% for paper_name in paper_metadata %}
        <tr>
          <td>{{ paper_name }}</td>
          <td>{{ paper_metadata[paper_name]["title"] }}</td>
          <td>{{ paper_metadata[paper_name]["authors"] | join(', ')}}</td>
          <td>{{ paper_metadata[paper_name]["venue"] }}</td>
          <td>{{ paper_metadata[paper_name]["year"] }}</td>
          <td>{{ paper_metadata[paper_name]["date-read"] }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </body>
</html>
